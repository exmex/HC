    </style>

    <style name="sogou_game_sdk_login_main_font" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sogou_game_sdk_main_font_color</item>
    </style>

    <style name="sogou_game_sdk_login_button_font" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sogou_game_sdk_white</item>
    </style>

    <style name="sogou_game_sdk_pay_left_side_font_s" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sogou_game_sdk_pay_left_side_font_color_s</item>
    </style>

    <style name="sogou_game_sdk_pay_left_side_font_d" parent="@android:style/Widget.TextView">
