<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip" 
    android:id="@+id/yyh_center_applistitem"
    >
    <LinearLayout
        android:id="@+id/yyh_center_imgcontainer"
        android:layout_width="70dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/yyh_center_appicon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/yyh_img"
            android:visibility="visible" 
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/yyh_center_downloadbtn_container"
        android:layout_toRightOf="@id/yyh_center_imgcontainer"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yyh_center_apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="abcdefg"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yyh_center_appsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="abcdefg"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/yyh_center_appcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="safsadfsafdasfasfsad"
            android:textColor="#000000"
            android:lines="2"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yyh_center_downloadbtn_container"
        android:layout_width="70dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            android:id="@+id/yyh_center_btn_app_download"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:background="@drawable/yyh_buttonselector_login"
            android:text="立即下载"
            android:textColor="#ffffff" 
            android:textSize="12sp"
            />
    </LinearLayout>

</RelativeLayout>