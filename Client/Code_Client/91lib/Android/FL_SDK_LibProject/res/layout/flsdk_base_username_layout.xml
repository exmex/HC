<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flsdk_login_account_lay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/flsdk_login_account_title"
        style="@style/flsdk_style_c2c2c2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/flsdk_login_account_text"
        style="@style/flsdk_style_edit_text"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/flsdk_login_account_title"
        android:background="@color/flsdk_gamehelper_color_transparent"
        android:gravity="center_vertical"
        android:hint="@string/flsdk_login_account_hint_text"
        android:paddingLeft="8.0dip" />

</RelativeLayout>