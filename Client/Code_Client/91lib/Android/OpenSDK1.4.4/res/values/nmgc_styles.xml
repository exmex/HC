<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="nmgc_progress_bar">
        <item name="android:indeterminateDrawable">@anim/nmgc_loading_spinner</item>
        <item name="android:minWidth">@dimen/nmgc_loading_progress_size</item>
        <item name="android:maxWidth">@dimen/nmgc_loading_progress_size</item>
        <item name="android:minHeight">@dimen/nmgc_loading_progress_size</item>
        <item name="android:maxHeight">@dimen/nmgc_loading_progress_size</item>
    </style>

    <style name="nmgc_common_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/nmgc_loading_border</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="nmgc_dialog_center" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="nmgc_common_text">
        <item name="android:textSize">@dimen/nmgc_login_common_text_size</item>
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="nmgc_login_button_text">
        <item name="android:textSize">@dimen/nmgc_login_button_text_size</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="nmgc_activitynotfloat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 全屏幕拉伸 -->
    <style name="nmgc_layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 固定自身大小 -->
    <style name="nmgc_layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 横向分布 -->
    <style name="nmgc_layout_horizontal" parent="nmgc_layout_full">
        <item name="android:layout_width">0dp</item>
    </style>
    <!-- 纵向分布 -->
    <style name="nmgc_layout_vertical" parent="nmgc_layout_full">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="nmgc_base_textview_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="nmgc_base_textview_fill">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="nmgc_boy_click_dialog_text" parent="nmgc_base_textview_wrap">
        <item name="android:textSize">@dimen/nmgc_login_common_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#331903</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:clickable">true</item>
    </style>

</resources>